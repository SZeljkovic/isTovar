<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="400" prefHeight="300" fx:controller="org.unibl.etf.bp.gui.LoginController" fx:id="rootPane">
    <children>
        <VBox alignment="CENTER" spacing="15.0"
              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
              style="-fx-background-color: #f0f4f8; -fx-padding: 40;">
            
            <Label text="Login"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <TextField fx:id="usernameField" promptText="Korisničko ime"
                       style="-fx-pref-width: 200px;" />

            <PasswordField fx:id="passwordField" promptText="Lozinka"
                           style="-fx-pref-width: 200px;" />

            <Button fx:id="loginButton" text="Prijavi se"
                    style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200px;" />
                    
            <Label fx:id="registerLabel" text="Nemate nalog? Registrujte se"
           style="-fx-text-fill: #2980b9; -fx-underline: true; -fx-cursor: hand; -fx-font-weight: bold;" />
        </VBox>
    </children>
</AnchorPane>
