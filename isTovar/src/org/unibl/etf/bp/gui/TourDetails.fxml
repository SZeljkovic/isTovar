<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.unibl.etf.bp.gui.TourDetailsController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #f0f4f8;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Button fx:id="backButton" text="Nazad"
                    style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
            <Label text="Detalji Ture" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;" alignment="TOP_CENTER">
            <Label text="Firme Izvorišta" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <VBox fx:id="sourceCompaniesContainer" spacing="10" />

            <Label text="Firme Odredišta" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <VBox fx:id="destinationCompaniesContainer" spacing="10" />
        </VBox>
    </center>
</BorderPane>
