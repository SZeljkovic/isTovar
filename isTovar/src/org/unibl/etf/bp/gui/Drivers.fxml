<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.unibl.etf.bp.gui.DriversController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #f0f4f8;">

    <!-- Top meni -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label text="Lista Vozača" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="closeButton" text="Zatvori"
                    style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Tabela u centru -->
    <center>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <TableView fx:id="driversTable" prefHeight="500" prefWidth="850">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="usernameColumn" text="Korisničko Ime" prefWidth="100"/>
                    <TableColumn fx:id="nameColumn" text="Ime" prefWidth="100"/>
                    <TableColumn fx:id="surnameColumn" text="Prezime" prefWidth="100"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="150"/>
                    <TableColumn fx:id="phoneColumn" text="Broj Telefona" prefWidth="120"/>
                    <TableColumn fx:id="licenseNumberColumn" text="Broj Dozvole" prefWidth="100"/>
                    <TableColumn fx:id="licenseColumn" text="Licenca" prefWidth="100"/>
                    <TableColumn fx:id="truckIdColumn" text="Kamion ID" prefWidth="80"/>
                    <TableColumn fx:id="availabilityColumn" text="Dostupan" prefWidth="80"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
