<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.unibl.etf.bp.gui.TrucksController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #f0f4f8;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label text="Lista Kamiona" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="closeButton" text="Zatvori"
                    style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <TableView fx:id="trucksTable" prefHeight="500" prefWidth="850">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="typeColumn" text="Tip" prefWidth="100"/>
                    <TableColumn fx:id="brandColumn" text="Marka" prefWidth="100"/>
                    <TableColumn fx:id="hpColumn" text="Konjske Snage" prefWidth="100"/>
                    <TableColumn fx:id="trailerIdColumn" text="ID Prikolice" prefWidth="100"/>
                    <TableColumn fx:id="fuelColumn" text="Vrsta Goriva" prefWidth="100"/>
                    <TableColumn fx:id="yearColumn" text="Godina" prefWidth="80"/>
                    <TableColumn fx:id="licensePlateColumn" text="Registarska Oznaka" prefWidth="130"/>
                    <TableColumn fx:id="mileageColumn" text="KilometraÅ¾a" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
