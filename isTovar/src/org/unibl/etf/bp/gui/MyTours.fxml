<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.unibl.etf.bp.gui.MyToursController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #f0f4f8;">

    <!-- Gornji meni -->
    <top>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label text="Moje Ture"
                   style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="closeButton" text="Nazad"
                    style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Kartice -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-padding: 20;">
            <VBox fx:id="cardsContainer" spacing="15" alignment="TOP_CENTER" />
        </ScrollPane>
    </center>

</BorderPane>
